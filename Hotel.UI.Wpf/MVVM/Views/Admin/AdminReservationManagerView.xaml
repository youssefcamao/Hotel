<UserControl x:Class="Hotel.UI.Wpf.MVVM.Views.Admin.AdminReservationManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotel.UI.Wpf.MVVM.Views.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1120">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="0,25,0,5" HorizontalAlignment="Center" FontSize="24" 
                   VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" FontWeight="Bold" Text="Reservations"/>
        <Button  Margin="0,20,0,0" x:Name="LoginButton" Style="{StaticResource MaterialDesignFlatMidBgButton}" 
                     materialDesign:ShadowAssist.ShadowDepth="Depth0" Height="40" Width="150" 
                     materialDesign:ButtonAssist.CornerRadius="10" FontSize="14" FontWeight="Light" Content="+ Add Reservation"
                     Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <ToggleButton Grid.Column="2" Grid.Row="0" Style="{StaticResource MaterialDesignFlatToggleButton}" HorizontalAlignment="Left" VerticalAlignment="Center" 
                      Margin="0,30,0,0" BorderBrush="{x:Null}" Background="{x:Null}" Command="{Binding OpenUserManagerCommand}"
                Width="90" HorizontalContentAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Filter" Margin="0,-6,3,1" Width="15" Foreground="Gray"/>
                <TextBlock Text="Filter"  FontSize="14" Foreground="Gray"/>
            </StackPanel>
        </ToggleButton>
        <DataGrid x:Name="DataGrid" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" 
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Reservations}" IsHitTestVisible="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding RoomNumber}" Header="Room Number" Width="2*" FontWeight="SemiBold">
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="2*" FontWeight="SemiBold"/>
                <DataGridTextColumn Binding="{Binding StartDate}" Header="Start Date" Width="1.5*" FontWeight="SemiBold"/>
                <DataGridTextColumn Binding="{Binding EndDate}" Header="End Date" Width="1.5*" FontWeight="SemiBold"/>
                <DataGridTextColumn Binding="{Binding TotalPrice}" Header="Total Price" Width="1*" FontWeight="SemiBold"/>
                <DataGridTextColumn Binding="{Binding Status}" Header="Status" Width="1*" FontWeight="SemiBold"/>
                <DataGridTextColumn Binding="{Binding LastName}" Width="0.5*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>